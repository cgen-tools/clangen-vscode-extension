{
  "name": "clangen-vscode-extension",
  "displayName": "clangen-vscode-extension",
  "description": "Extension to help with development for video game Clan Generator.",
  "version": "v1.0.0-beta.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/cgen-tools/clangen-vscode-extension.git"
  },
  "license": "MPL-2.0",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "json",
        "path": "./snippets/pronoun-snippets.json"
      },
      {
        "language": "json",
        "path": "./snippets/resource-snippets.json"
      }
    ],
    "jsonValidation": [
      {
        "url": "./schemas/patrol.schema.json",
        "fileMatch": [
          "patrols/*.json",
          "patrols/**/*.json",
          "!explicit_patrol_art.json"
        ]
      },
      {
        "url": "./schemas/thought.schema.json",
        "fileMatch": [
          "thoughts/**/*.json"
        ]
      },
      {
        "url": "./schemas/shortevent.schema.json",
        "fileMatch": [
          "events/death/*.json",
          "events/disasters/*.json",
          "events/injury/*.json",
          "events/misc/*.json",
          "events/new_cat/*.json"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  }
}
